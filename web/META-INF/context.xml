<?xml version="1.0" encoding="UTF-8"?>
<Context path="/PollWeb">
    <Resource
        name="jdbc/pollwebdb" type="javax.sql.DataSource"
        maxActive="10" maxIdle="5" maxWait="10000" 
        auth="Container"
        url="jdbc:mysql://localhost:3306/pollwebdb?serverTimezone=UTC"
        driverClassName="com.mysql.cj.jdbc.Driver"
        username="website" password="webpass"
    />
</Context>